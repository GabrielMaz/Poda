<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ProgressBar
        android:id="@+id/item_home_progress_bar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:indeterminate="false"
        android:progressDrawable="@layout/custom_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="25"/>

    <TextView
        android:id="@+id/item_home_progress_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25%"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/item_home_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_home_progress_bar"
        android:layout_centerHorizontal="true"
        android:text="Work"
        />


</RelativeLayout>